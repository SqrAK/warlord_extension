{
	"manifest_version": 2,

	"name": "Warlord Justifier",
	"description": "This extension shows whether person is good or bad",
	"version": "1.0",
	"options_page": "assets/pages/options.html",

	"icons": {"16": "assets/img/icon.png"},

	"permissions": ["tabs", "storage" , "http://*/*", "https://*/*"	],

    "content_scripts": [{
		"matches": ["*://vk.com/*"],
		"js": ["vk_inject.js"],
		"css": ["assets/styles/vk_styles.css"],
		"run_at": "document_end"
	}],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

    "web_accessible_resources": [
        "utils.js",
        "assets/img/loader.gif"
    ]
}